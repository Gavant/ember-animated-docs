<DocsDemo as |demo|>
    <demo.example @name="animated-beacon-basic.hbs">
        <button class="btn btn-primary mb-3" {{on "click" this.resetItems}} type="button">Reset List</button>
        <AnimatedContainer class="w-100 d-flex flex-row justify-content-between">
            <ul class="list-unstyled w-25">
                {{#animated-each this.items use=this.transition duration=800 as |item|}}
                    <li class="card p-2 shadow-sm d-flex flex-row justify-content-between align-items-center">
                        <div>{{item}}</div>
                        <button
                            class="btn btn-link p-1"
                            {{on "click" (fn this.removeItem item)}}
                            type="button"
                        >Delete</button>
                    </li>
                {{/animated-each}}
            </ul>
            <div class="w-25 h-25">
                {{#animated-beacon name="trash"}}
                    <div class="p-3 bg-danger text-center rounded">
                        Trash
                    </div>
                {{/animated-beacon}}
            </div>
        </AnimatedContainer>
    </demo.example>
    <demo.snippet @name="animated-beacon-basic.hbs" />
    <demo.snippet @name="animated-beacon-basic.ts" @label="script.ts" />
</DocsDemo>